# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Default file character encoding to UTF-8 charset
charset = utf-8
# Unix-style newlines
end_of_line = lf
# Space indentation style
indent_style = space
# 2 space indentation
indent_size = 2
# Insert newline to the end of file
insert_final_newline = true
# Remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true

[*.md]
# (Markdown) Leave any whitespace characters preceding newline characters
trim_trailing_whitespace = false
